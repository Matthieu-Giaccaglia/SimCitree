<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="vbox" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="simcitree.ControllerForest">
   <ToolBar fx:id="toolbar" maxHeight="-Infinity" minHeight="-Infinity" prefHeight="40.0">
      <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../raw/logo_simcitree.png" />
         </image>
      </ImageView>
      <Separator orientation="VERTICAL" prefHeight="40.0" />
      <Button fx:id="buttonStart" mnemonicParsing="false" onAction="#startSimulation" text="Start" />
      <Separator orientation="VERTICAL" prefHeight="200.0" />
      <Button fx:id="buttonPause" mnemonicParsing="false" onAction="#pauseSimulation" text="Pause" />
      <Separator orientation="VERTICAL" prefHeight="200.0" />
      <Label text="Nb Event :" />
      <Label fx:id="labelNbTour" />
      <Separator orientation="VERTICAL" prefHeight="200.0" />
      <Label prefHeight="17.0" text="Nombres Arbres : " />
      <Label fx:id="labelNbArbres" />
      <Separator orientation="VERTICAL" prefHeight="200.0" />
      <Label text="Temps :" />
      <Label fx:id="labelTime" />
   </ToolBar>
   <ScatterChart fx:id="chart" alternativeColumnFillVisible="false" alternativeRowFillVisible="false" animated="true" legendVisible="false" minHeight="-Infinity" minWidth="-Infinity" prefHeight="500.0" prefWidth="600.0" VBox.vgrow="ALWAYS">
      <xAxis>
         <NumberAxis animated="false" autoRanging="false" side="BOTTOM" tickMarkVisible="false" upperBound="1.0" />
      </xAxis>
      <yAxis>
         <NumberAxis animated="false" autoRanging="false" minorTickVisible="false" side="LEFT" tickLabelGap="1.0" tickMarkVisible="false" upperBound="1.0" />
      </yAxis>
   </ScatterChart>
</VBox>
