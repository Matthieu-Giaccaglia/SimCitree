<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="vbox" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.ControllerForest">
   <ToolBar fx:id="toolbar" maxHeight="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="40.0" prefWidth="400.0">
      <Button fx:id="buttonStart" mnemonicParsing="false" onAction="#startSimulation" text="Start" />
      <Separator orientation="VERTICAL" prefHeight="200.0" />
      <Button fx:id="buttonPause" mnemonicParsing="false" onAction="#pauseSimulation" text="Pause" />
      <Separator orientation="VERTICAL" prefHeight="200.0" />
      <Label text="Nombre tour :" />
      <Label fx:id="labelNbTour" />
   </ToolBar>
   <ScatterChart fx:id="chart" alternativeColumnFillVisible="false" alternativeRowFillVisible="false" animated="true" horizontalGridLinesVisible="false" horizontalZeroLineVisible="false" legendVisible="false" verticalGridLinesVisible="false" verticalZeroLineVisible="false">
      <xAxis>
         <NumberAxis animated="true" minorTickVisible="false" side="BOTTOM" upperBound="1.0" />
      </xAxis>
      <yAxis>
         <NumberAxis animated="true" minorTickVisible="false" side="LEFT" upperBound="1.0" />
      </yAxis>
   </ScatterChart>
</VBox>
